@{
    ViewData["Title"] = "#Flix";

}

<div class="container">
    <div class="left-panel pt-40">
        <h1 class="text-white">@ViewBag.Username</h1>
        <img class="user--icon" src="/images/usericon.svg" />
        <ul>
            <li><a class="text-white" asp-controller="Home" asp-action="UserIndex">Home</a></li>
            <li><a class="text-white" asp-controller="Home" asp-action="LogIn">Log out</a></li>
        </ul>
    </div>
    <div class="main-section pt-40">
        <h1 class="text-white">Here are your playlists @ViewBag.Username</h1>

        <ul class="container--column">
            <li>
                <div class="card">
                    <h2>Create new playlist</h2>
                        <form asp-controller="Playlist" asp-action="Create" method="post">
                            <input class="form-input" type="text" name="title" placeholder="Playlist Title" required="" />
                            <input type="submit" value="Add" class="button" />
                        </form>
                </div>
            </li>
            @foreach (var playlist in @ViewBag.Posts)
            {
                  <li>
                      <form class="card" asp-controller="Playlist" asp-action="Delete" asp-route-id="@playlist.Id" method="post">
                          <h2>@playlist.Title</h2>
                          <a class="button" href="../Watchlist/GetWatchlistByPlaylistId/@playlist.Id">View</a>
                          <input type="submit" value="Delete" class="button mt-20" />
                      </form>
                 </li>
            }
        </ul>
    </div>
</div>